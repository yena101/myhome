<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script>//자바스크립트 함수
      function login(){
        open('/login', '_self');
      }

      function signup(){
        open('/signup', '_self');
      }
    </script>
  </head>
  <body>
    <style> body {
      background-color: #f8f9fa;
      padding: 20px;
    }

    .container {
      max-width: 800px;
      margin: auto;
      position: relative;
    }

    h1, h3 {
      text-align: center;
    }

    h1 {
      color: #007bff;
      margin-top: 30px;
      font-weight: bold;
    }

    h3 {
      color: #28a745;
    }

    h6 {
      color: gray;
      text-align: center;
    }
/*로그인 버튼과 회원가입 버튼 스타일 정의*/
    .login, .signup {
      font-size: 18px;
      font-weight: bold;
      margin-top: 18px;
    }

    .login {
      background-color: #ffc107;
      border-color: #ffc107;
    }

    .signup {
      background-color: #28a745;
      border-color: #28a745;
    }
/*삽입한 사진의 스타일 정의*/
    .bg-image {
  width: 50%;
  height: auto;
  display: block;
  margin-top: 20px;
  margin-left: auto;
  margin-right: auto;
}
  </style><!-- 메뉴 파일 포함 -->
   <%- include('menu.html') %>
      
   <div class="container">
    <!-- 블로그 로그 사진 첨부 -->
    <img src="/image/yena.jpg" alt="배경 이미지" class="bg-image">
    <h1>블로그에 오신 것을 환영합니다.</h1>
    <% if(user){ %><!-- 로그인 되어있을 때의 홈화면 출력 -->
      <h3><%= user.userid %>님의 블로그</h3>
      <a href="/logout" class="btn btn-outline-danger">로그아웃</a>
      <% } else { %><!-- 로그인 되지 않았을 때 홈화면 출력 -->
        <h3>로그인이 필요한 서비스입니다.</h3>
        <!-- 로그인 버튼과 회원가입 버튼 -->
        <button class="w-100 btn btn-warning login" onclick="login()">로그인</button>

        <small class="text-muted">회원이 아니신가요?</small>
        <button class="w-100 btn btn-success signup" onclick="signup()">회원가입</button>
      <% } %>
    </div>
   <!-- Jquery 사용을 위해 제이쿼리 라이브러리를 가져옴 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script>
        $('.login').click(function(e){
          location.href="/login";
        })

        $('.signup').click(function(e){
          location.href="/signup";
        })

      </script>
  </body>
</html>