          <h1>블로그 내용 수정하기</h1>
          <div class="container mt-4">
            <form action="/edit" method="post">
               <!-- 제목 입력 폼 그룹 -->
                <div class="form-group">
                    <label>제목</label>
                     <!-- 블로그 아이디를 전송하는 숨겨진 입력 필드 -->
                    <input type="text" name="id" class="form-control" value="<%= data._id %>" style="display: none;">
                    <!-- 현재 제목을 보여주는 입력 필드 -->
                    <input type="text" name="title" class="form-control" value="<%= data.title %>">
                </div><p></p>
                   <!-- 내용 입력 폼 그룹 -->
                <div class="form-group">
                    <label>내용</label>
                </div><p></p>
                 <!-- 내용을 입력하는 텍스트 에어리어 -->
                <textarea name="content" rows="10" class="form-control"><%= data.content %></textarea>
            </div><p></p>
            
               <!-- 작성일 입력 폼 그룹 -->
            <div class="form-group">
                <label>작성일</label>
                <input type="date" class="form-control" name="someDate" value="<%= data.date %>">
            </div><p></p>
              <!-- 수정 버튼 -->
            <button type="submit" class="btn btn-warning" style="float:right;">수정</button>
